{
  "name": "jspm",
  "description": "Browser package management",
  "license": "Apache-2.0",
  "version": "3.0.0-beta",
  "scripts": {
    "build": "npm run build-node && npm run build-api",
    "build-node": "ncc build -t src/node.js -e sver -s -e es-module-lexer",
    "watch-build-node": "ncc build -t src/node.js -s -e sver -e es-module-lexer -w",
    "test": "jspm run test:script-lexer && jspm run test:dom",
    "test:dom": "jspm deno -x --no-check --allow-read --allow-net src/inject/dom-manipulator.ts",
    "test:script-lexer": "jspm deno -x --no-check --allow-net src/inject/script-lexer.ts"
  },
  "exports": {
    "publish": "./dist/index.js",
    "default": "./src/cli.ts"
  },
  "bin": {
    "jspm": "dist/index.js"
  },
  "main": "./lib/node.js",
  "dependencies": {
    "@iarna/toml": "^3.0.0",
    "es-module-lexer": "^0.3.26",
    "magic-string": "^0.25.7",
    "mkdirp": "^1.0.4",
    "sver": "^1.8.3"
  },
  "devDependencies": {
    "@vercel/ncc": "^0.27.0",
    "cache": "file:./deps/cache",
    "chalk": "^4.1.0",
    "make-fetch-happen": "^8.0.3",
    "ora": "^5.1.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.1.3"
  },
  "files": [
    "bin",
    "lib"
  ]
}
